# Use official Playwright base image (comes with browsers preinstalled)
FROM mcr.microsoft.com/playwright:v1.55.1-focal

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json first (for caching layers)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of your app
COPY . .

# Make sure Chromium is available (extra safety)
RUN npx playwright install --with-deps chromium

# Render expects dynamic ports (>=10000)
ENV PORT=10000
EXPOSE 10000

# Start your app
CMD ["npm", "start"]
